{% set classes = [
  'bg-gray-900',
  'rounded-lg',
  'overflow-hidden',
  'shadow-lg',
  'hover:shadow-xl',
  'transition-shadow',
  'duration-300',
  'max-w-sm',
  'w-full'
] %}

<div {{ attributes.addClass(classes) }}>
  {% if image_url %}
    <div class="aspect-video w-full overflow-hidden">
      <img src="{{ image_url }}" alt="{{ title }}" class="w-full h-full object-cover">
    </div>
  {% endif %}

  <div class="p-4">
    <h3 class="text-white font-bold text-lg mb-2 leading-tight">{{ title }}</h3>
    
    {% if description %}
      <p class="text-gray-300 text-sm mb-3 leading-relaxed">{{ description }}</p>
    {% endif %}

    {% if rating %}
      <div class="flex items-center">
        {% for i in 1..5 %}
          {% if i <= rating %}
            <span class="text-yellow-400 text-lg">★</span>
          {% else %}
            <span class="text-gray-600 text-lg">☆</span>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>
